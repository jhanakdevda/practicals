#include <stdio.h>
#include <stdlib.h>
#define MAX 5

int queue[MAX], front = -1, rear = -1;

void addOrder(int id) {

        if (front == -1) front = 0;
        queue[++rear] = id;
        printf("Order %d added.\n", id);
    
}

void serveOrder() {
   
        printf("Order %d served.\n", queue[front++]);
        
    
}

void display() {
    
        printf("Current Orders:\n");
        for (int i = front; i <= rear; i++)
            printf("%d ", queue[i]);
            printf("\n");
    
}

int main() {
    int ch, id;
    while (1) {
        printf("\n1.Add  2.Serve  3.Display  4.Exit\nChoice: ");
        scanf("%d", &ch);
        switch (ch) {
            case 1: printf("Enter Order ID: "); scanf("%d", &id); addOrder(id); break;
            case 2: serveOrder(); break;
            case 3: display(); break;
            case 4: exit(0);
            default: printf("Invalid!\n");
        }
    }
}
