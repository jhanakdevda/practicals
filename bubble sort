#include <stdio.h>
int main()
{
    int n, i, j;
    printf("Enter number of students: ");
    if (scanf("%d", &n) != 1 || n <= 0) return 0;
    float arr[n];
    for (i = 0; i < n; i++) scanf("%f", &arr[i]);
    for (i = 0; i < n - 1; i++)
    {
        for (j = 0; j < n - i - 1; j++)
        {
            if (arr[j] > arr[j + 1])
            {
                float t = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = t;
            }
        }
    }
    int count = n < 5 ? n : 5;
    printf("Top %d scores (highest to lowest):\n", count);
    for (i = 0; i < count; i++) printf("%.2f\n", arr[n - 1 - i]);
    return 0;
}
